<ScatterTextWidget>:
    orientation: 'vertical'
    TextInput:
        id: text_input
        font_size: 150
        size_hint_y: None
        height:200
        text:'default'
        on_text: root.change_label_color()
    FloatLayout:
        Scatter:
            Label:
                text: text_input.text
                font_size: 150
                color: root.text_color
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 150
        Label:
            text: text_input.text[:3][::-1]
            font_size: 100
            color: root.text_color
        Label:
            text: text_input.text[-3:][::-1]
            font_size: 100
            color: root.text_color
